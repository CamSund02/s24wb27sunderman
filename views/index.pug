extends layout

block content
  h1= title
  p This is a change to the Pug file #{title}
  button(type="button", class="btn btn-secondary", onclick="double()") Press Me
  div#double Two to the power #{power} is #{value}.

  //- Class: gizmo
  //- Attributes/Types:
  //-   gizmo_name (string)
  //-   functionality (string)
  //-   price (number)

  - const drone = { gizmo_name: "drone", functionality: "Fly around and take pictures", price: 500 }
  - const camera = { gizmo_name: "camera", functionality: "Take nice pictures", price: 2000 }
  - const electricSkateboard = { gizmo_name: "electric skateboard", functionality: "ride around", price: 300 }

  p gizmo Name: #{drone.gizmo_name}, functionality: #{drone.functionality}, Price: #{drone.price}
  p gizmo Name: #{camera.gizmo_name}, functionality: #{camera.functionality}, Price: #{camera.price}
  p gizmo Name: #{electricSkateboard.gizmo_name}, functionality: #{electricSkateboard.functionality}, Price: #{electricSkateboard.price}


  script.
    var value = 2;
    var power = 1;

    function double() {
        power += 1;
        value *= 2;
        document.getElementById('double').innerText = "Two to the power " + power + " is " + value + ".";
    }

